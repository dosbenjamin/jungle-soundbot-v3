{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@junglebot/tsconfig/base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": ["bun-types"],
    "paths": {
      "@env": ["./env.ts"],
      "@app/*": ["./src/app/*"],
      "@shared/*": ["./src/shared/*"],
      "@features/*": ["./src/features/*"]
    }
  },
  "include": ["./src", "./drizzle.config.ts", "./env.ts"]
}
