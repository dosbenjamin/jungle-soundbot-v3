{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@junglebot/tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": ["@types/bun"],
    "baseUrl": "./",
    "paths": {
      "@env": ["env.ts"],
      "@app/*": ["src/app/*"],
      "@shared/*": ["src/shared/*"],
      "@features/*": ["src/features/*"]
    }
  },
  "include": ["./**/*.ts"]
}
